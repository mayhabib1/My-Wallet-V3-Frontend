.destination-input
  .input-group(ng-click="focus()")
    button.form-control(
      type="button"
      ng-show="model.type === 'Accounts'"
      ng-click="clearModel(); focusInput();")
      span.pull-left
        | {{ model.label }}
    input.form-control(
      type="text"
      tabindex="1"
      autocomplete="off"
      placeholder="Paste or scan an address or select a destination"
      ng-model="model.address"
      ng-hide="model.type === 'Accounts'"
      ng-blur="blur()"
    )
    .input-group-btn(uib-dropdown)
      button#qr.btn.btn-default(
        type="button"
        ng-disabled="!browserWithCamera"
        ng-class="{ 'border-rounded-right': destinations.length <= 1 }"
        ng-click="onRequestQr()")
        img(src="img/qr-code.png" alt="QR")
      button.btn.btn-default(
        type="button"
        ng-show="destinations.length > 1"
        uib-dropdown-toggle)
        span.caret
        span.sr-only Toggle Dropdown
      ul.uib-dropdown-menu.dropdown-menu-right.drop-menu
        li(ng-repeat="dest in destinations")
          a(ng-click="setModel(dest)")
            label-origin(origin="dest" hide-balance="true")
